<h1>Group Index Page</h1>

<% if @groups.any? %>
<% @groups.each do |group| %>

<div class='group-card'>


    <div class='g-card-row-1'>
        <div class='g-card-col-1'>
            <%= image_tag "#{group.icon}", class:'g-card-img' %>
        </div>

        <div class='g-card-col-2'>
            <p><%= link_to group.name, group_path(group), class: 'g-card-name' %></p>
            <%# <p><%= group.created_at.strftime("%Y-%b-%d"), class: 'g-card-date' %></p> %>
        </div>

        <div class='g-card-col-3'>
            <p>Total: $<%= group.expenses.sum(:amount) %> </p>
        </div>
    </div>

    <% if can? :destroy, group %>
    <div class='g-card-row-2'>
        <%= button_to 'Delete', group_path(group.id), method: :delete, class:'delete-btn' %>
    </div>
    <% end %>

</div>

<% end %>

<% else %>
<p>There are no categories. Please create a new category</p>
<% end %>

<div class='create-g-btn'>
    <%= link_to 'Create New Category', new_group_path %>
</div>
