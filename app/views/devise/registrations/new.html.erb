<nav class='page-nav'>
  <h3 class='page-title'>Sign Up</h3>
</nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder: 'Full Name', class:'b-field' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class:'b-field' %>
  </div>

  <div class="field">

    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class:'b-field' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class:'b-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'log-btn' %>
  </div>
<% end %>

<div class= 'action-links'>
<%= render "devise/shared/links" %>
</div>
